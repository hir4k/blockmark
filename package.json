{
  "name": "blockmark",
  "version": "1.0.0",
  "description": "Block based rich text editor library",
  "main": "dist/blockmark.umd.js",
  "module": "dist/blockmark.es.js",
  "exports": {
    ".": {
      "types": "./dist/blockmark.d.ts",
      "import": "./dist/blockmark.es.js",
      "require": "./dist/blockmark.umd.js"
    },
    "./dist/blockmark.css": "./dist/blockmark.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.js",
    "build:scss": "sass src/scss/main.scss:dist/blockmark.css --style compressed",
    "build:scss:watch": "sass src/scss/main.scss:dist/blockmark.css --watch",
    "prepublishOnly": "npm run build:scss && npm run build:lib"
  },
  "keywords": [
    "rich-text-editor",
    "block-editor",
    "wysiwyg",
    "content-editor",
    "markdown",
    "blocks"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.90.0",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "^2.0.2"
  }
}